{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Debug TypeScript",
    "cwd": "${workspaceFolder}",
    "args": ["${fileBasename}"],
    "runtimeArgs": [
      "-r", "ts-node/register"
    ],
    "stopOnEntry": false,
    "internalConsoleOptions": "openOnSessionStart",
    "sourceMaps": true,
    "protocol": "inspector",
  }]
}
